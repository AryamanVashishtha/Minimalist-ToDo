<html>

<head>
  <title>Todo</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
</head>
<link src="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="/CSS/home.css" type="text/css">
<link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
<script src="https://kit.fontawesome.com/13ef72b4d9.js" crossorigin="anonymous"></script>

<body>
  <h1>Minimalist Todo List</h1>
  <div id="container">
    <form action="/create-task" method="post">
      <input placeholder="Write task" class="add-task" id="add" name="task" />
      <select class="cat" name="cat">
        <option value="">Category</option>
        <option value="per">Personal</option>
        <option value="work">Work</option>
        <option value="col">College</option>
        <option value="oth">Others</option>
      </select>
      <input placeholder="Due Date" class="textbox-n date" type="text" onfocus="(this.type='date')"
        onblur="(this.type='date')" id="date" name="date" />
      <input type="submit" class="add-task" name="Add task">
    </form>
    <ul id="list">
      <% for (let i of todo_list) { %>
        <ul class="list-item">
          <span id="start-align">
            <input type="checkbox" name="done" value="true" id="checkbox">
            <p><%=i.task%></p>
          </span>
          <span id="end-align">
            <p class="task-date"><%= i.due_date.toDateString() %></p>
            <button>
              <a href="/delete-task/<%= i._id %>"><i class="fa-regular fa-trash-can"></i></a>
            </button>
          </span>
        </ul>
        <% } %>


    </ul>
  </div>
</body>

</html>